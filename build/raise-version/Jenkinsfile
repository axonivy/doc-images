pipeline {
  agent {
    docker {
      image 'maven:3.6.3-jdk-11'
    }
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '10'))
  }

  parameters {
    string name: 'newVersion', defaultValue: '10.0.0'
  }

  triggers {
    cron '@midnight'
  }

  stages {    
    stage('build') {
      steps {
        script {
          sh "mvn --batch-mode versions:set versions:commit -DnewVersion=${newVersion} -DprocessAllModules"
        }
      }
    }

    stage('pull-request') {
      when {
        anyOf {
          triggerdBy 'UserIdCause'
          triggerdBy 'UpStream'
        }
      }
      steps {
        pullRequest branch: "raise-version", message: "Raise version to ${params.newVersion}"
      }
    }
  }
}
